<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_button_primary"
    android:padding="12dp">

    <TextView
        android:id="@+id/screen_list_item_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内置屏幕"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24sp" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/screen_list_item_layout_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/screen_list_item_layout_title"
        android:text="显示ID"
        android:textSize="16sp" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/screen_list_item_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/screen_list_item_layout_title"
        android:layout_alignRight="@id/screen_list_item_layout_title"
        android:text="显示ID"
        android:textSize="16sp" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/screen_list_item_layout_pixel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/screen_list_item_layout_id"
        android:text="分辨率"
        android:textSize="16sp" />

</RelativeLayout>